---
interface Props {
  name: string;
  img?: string;
}

const { name, img } = Astro.props;
---

<div class="mx-auto items-center text-center">
  <a href="#">
    <img alt="Art" src={img} class="w-full object-cover p-5" />

    <h3 class="-mt-12 font-bold text-white">
      {name}
    </h3>
  </a>
</div>

<!-- -------------------------------- -->
<style>
  img {
    width: 180px;
    height: auto;
  }
  h3 {
    display: flex;
    width: 175px;
    padding: 10.229px;
    justify-content: center;
    align-items: center;
    gap: 10.229px;
    font-size: 10px;
    border-radius: 15.343px;
    background: rgba(0, 0, 0, 0.4);
  }
</style>
